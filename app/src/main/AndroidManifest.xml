<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.firebaseconnection"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.EXECUTE_CODE"/>
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FirebaseConnection"
        tools:targetApi="31">
        <activity
            android:name=".WelcomeActivity"
            android:exported="true"
            android:theme="@style/Theme.FirebaseConnection">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".AdminActivity"
            android:exported="false" />
        <activity
            android:name=".AdminDashboard"
            android:label="Admin Dashboard" />
        <activity
            android:name=".SignupActivity"
            android:exported="false" />
        <activity
            android:name=".SigninActivity"
            android:exported="false" />

        <activity
            android:name=".User"
            android:exported="false"
            tools:ignore="Instantiatable" />
        <activity
            android:name=".OrderActivity"
            android:exported="false" />
        <activity
            android:name=".Order"
            android:exported="false"
            tools:ignore="Instantiatable" />
        <activity
            android:name=".Date_time_of_delivery"
            android:label="Date and Time of Delivery" />
        <activity
            android:name=".Notification"
            android:label="Notification" />

    </application>

</manifest>